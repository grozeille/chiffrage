<?xml version="1.0"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Chiffrage.Core" namespace="Chiffrage.Core">

  <class name="Hardware" table="Hardware">
    <id name="Id" column="Id">
      <generator class="hilo"/>
    </id>
    <property name="Name"/>
    <property name="Reference"/>
    <property name="Category"/>
    <bag name="Components" cascade="save-update">
      <key column="HardwareId"/>
      <one-to-many class="HardwareSupply"/>
    </bag>
  </class>
</hibernate-mapping>