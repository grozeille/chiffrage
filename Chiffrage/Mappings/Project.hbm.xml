<?xml version="1.0"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Chiffrage.Core" namespace="Chiffrage.Core">

  <class name="Project" table="Project">
    <id name="Id" column="Id">
      <generator class="hilo"/>
    </id>
    <property name="Name"/>
    <property name="Reference"/>
    <property name="Comment"/>
    <property name="StartDate"/>
    <property name="EndDate"/>
    <bag name="Supplies" cascade="all">
      <key column="ProjectId"/>
      <one-to-many class="ProjectSupply"/>
    </bag>
    <bag name="Hardwares" cascade="all">
      <key column="ProjectId"/>
      <one-to-many class="ProjectHardware"/>
    </bag>
    <bag name="OtherBenefits" cascade="all">
      <key column="ProjectId"/>
      <one-to-many class="OtherBenefit"/>
    </bag>
    <property name="StudyRate"/>
    <property name="ReferenceRate"/>
    <property name="WorkDayRate"/>
    <property name="WorkShortNightsRate"/>
    <property name="WorkLongNightsRate"/>
    <property name="TestDayRate"/>
    <property name="TestNightRate"/>
  </class>
</hibernate-mapping>